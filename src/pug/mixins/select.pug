mixin select(title, items)
    .select-wrap
        .title-select Выберите категорию
        .select
            a(href="javascript:void(0);", class="slct")
                span.slct-title #{title}
                span.slct-svg
                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5.5 9L0.736861 0.749999L10.2631 0.75L5.5 9Z" fill="#7E9BBD"/></svg>
            ul.drop
                each item in items
                    li= item.name
            input(type="hidden", id="select" value="")
