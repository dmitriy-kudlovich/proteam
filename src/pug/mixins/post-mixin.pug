mixin post-mixin(title, desc, filePath="./../img/post-photo-1.png", text, text2)
    .post-mixin
        h2.post-mixin__title #{title}
        h6.post-mixin__desc #{desc}
        img.post-mixin__img(src= filePath, alt="Национальный парк Йосемити")
        .post-mixin__text
            p #{text}
            p #{text2}

