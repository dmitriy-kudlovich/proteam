extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Карточки - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Карточки

    //- Демонстрация компонента
    .ui-kit__component-demo
        +cards-project("HTML, CSS, wordpress", "projectCardImg-1.jpg", "#", "Архитектурное бюро John Doe и партнеры.", "Сайт под ключ")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +cards-project(text, img, link, title1, title2)

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/cards.pug
        
    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin cards-project(text, img, link, title1, title2)
                .card-project
                    .card-project__subtitle
                        p&attributes(attributes) #{text}
                    a(href="#").card-project__img
                        img(src="../img/Cards/project-card/" + img, alt="projectCardImg-1")
                    .card-project__title
                        .card-project__title-item
                            a(href=link)&attributes(attributes) #{title1}
                        .card-project__title-item
                            a(href=link)&attributes(attributes) #{title2}