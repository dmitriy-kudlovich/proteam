extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Кнопки - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Шапка

    //- Демонстрация компонента
    .ui-kit__component-demo
        include ../sections/header.pug
    .ui-kit__component-demo
        include ../sections/header-inside.pug
   

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            include ../sections/header.pug
            include ../sections/header-inside.pug

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/header-info.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
           mixin header-info(name, text)
            .header-title&attribute(name)
            .header-info&attribute(text)
                nav.header-nav
                    ul.header-nav_items
                            li.header-nav_item 
                                a(href="#") Обо мне
                            li.header-nav_item 
                                a(href="#") Портфолио
                            li.header-nav_item 
                                a(href="#") Блог
                            li.header-nav_item 
                                a(href="#") Контакты
                                