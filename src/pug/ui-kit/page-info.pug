extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Информация о странице - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Информация о странице

    //- Демонстрация компонента
    .ui-kit__component-demo
        +page-info("Национальный парк", "16 Марта 2020", "Путешествия")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +page-info("Национальный парк", "16 Марта 2020", "Путешествия")

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/page-info.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin page-info(title, date, label)
                .page-info
                    +section-title(title)
                    .title-info
                        .title-info__date= date
                        +black-label(label)
                    