extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Textarea - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Textarea

    //- Демонстрация компонента
    .ui-kit__component-demo
        .container
            +textarea("post", "Введите текст поста")
            +textarea("admin-message", "Введите текст сообщения", "Сообщение администратору")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            Textarea без ярлыка:
            +textarea("post", "Введите текст поста")

            Textarea с ярлыком:
            +textarea("admin-message", "Введите текст сообщения", "Сообщение администратору")

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/textarea.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin textarea(name, placeholder, title)
                if title
                    label.textarea__label= title
                        textarea.textarea.textarea--labeled(name= name, placeholder= placeholder, title= title)
                else
                    textarea.textarea(name= name placeholder= placeholder)