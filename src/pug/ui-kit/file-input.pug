extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Форма загрузки файла - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Форма загрузки файла

    //- Демонстрация компонента
    .ui-kit__component-demo
        .container
            +file-input("Обложка поста", "Изображение jpg или png, рекомендуемая ширина 945px и больше, высота от 400px и более. Вес до 2Мб.", "file-input")
            +file-input("Обложка поста", "Изображение jpg или png, рекомендуемая ширина 945px и больше, высота от 400px и более. Вес до 2Мб.", "file-input", "prev1.jpg")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            Блок загрузки файла без превью:
            +file-input("Обложка поста", "Изображение jpg или png, рекомендуемая ширина 945px и больше, высота от 400px и более. Вес до 2Мб.", "file-input")

            Блок загрузки файла с превью:
            +file-input("Обложка поста", "Изображение jpg или png, рекомендуемая ширина 945px и больше, высота от 400px и более. Вес до 2Мб.", "file-input", "prev1.jpg")

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/file-input.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin file-input(title, desc, id, pic_name="")
                .file-input-block
                    .file-input__text
                        .file-input__text-head= title
                        .file-input__text-desc= desc
                    label.file-input__label(for= id)
                        +file-button("Выбрать файл")
                        input.file-input(type="file" id= id)
                    if pic_name!=""
                        .preview-img
                            img(src="../img/preview/"+ pic_name)
                            +delete-button("Удалить")