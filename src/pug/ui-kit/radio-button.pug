extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Радиокнопки - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Радиокнопки

    //- Демонстрация компонента
    .ui-kit__component-demo
        .container
            +radio-button("radio", "Заметки программиста", "prog", "checked")
            +radio-button("radio", "Заметки путешественника", "travel")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +radio-button("radio", "Заметки программиста", "prog", "checked")
            +radio-button("radio", "Заметки путешественника", "travel")

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/radio-button.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin radio-button(name, text, id, checked)
                if checked
                    input.radio-button(type="radio" name= name id= id checked=true)
                    label.radio-button__label(for= id)= text
                else
                    input.radio-button(type="radio" name= name id= id)
                    label.radio-button__label(for= id)= text
